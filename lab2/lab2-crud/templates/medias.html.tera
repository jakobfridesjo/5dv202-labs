{% extends "base" %} 
{% block header %} 
{% endblock %} 
{% block content %}
<body>
    <table border="0" align=center valign=top>
        <tr valign="top">
            <td width="70%">
                <table class="media_table">
                    <thead>
                        <th>Movie name</th>
                        <th>Genre</th>
                        <th>Year</th>
                        <th>Score</th>
                    </thead>
                    <tbody>
                        {% for media in medias %}
                        <tr>
                            <th>
                                <a href="/roles/in/{{media.media_name}}">
                                    {{media.media_name}}
                                </a>
                            </th>
                            <td>{{media.media_genre}}</td>
                            <td>{{media.media_year}}</td>
                            <td>{{media.media_score}}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </td>
            <td width="30%">
                <form method="POST" action="/medias/add">
                    <fieldset>
                        <legend>
                            <h4>Add/Update a media:</h4>
                        </legend>
                        <p>
                            <field>Name:</field>
                            <input type="text" name="media_name" />
                        </p>
                        <p>
                            <field>Genre:</field>
                            <input type="text" name="media_genre" />
                        </p>
                        <p>
                            <field>Year:</field>
                            <input type="number" min="1895" name="media_year" />
                        </p>
                        <p>
                            <field>Score:</field>
                            <input type="number" min="1" max="100" name="media_score" />
                        </p>
                        <p></p>
                        <p align=center>
                            <button>Add/Update</button>
                        </p>
                    </fieldset>
                </form>
                <form method="POST" action="/medias/delete">
                <fieldset>
                    <legend>
                        <h4>Remove a media:</h4>
                    </legend>
                    <p>
                        <label>Name:</label>
                        <input type="text" name="media_name" />
                    </p>
                    <p></p>
                    <p align=center>
                        <button>Delete</button>
                    </p>
                </fieldset>
                </form>
            </td>
        </tr>
    </table>
</body>
{% endblock %}
